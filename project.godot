; Engine configuration file.
; It's best edited using the editor UI and not directly,
; since the parameters that go here are not all obvious.
;
; Format:
;   [section] ; section goes between []
;   param=value ; assign values to parameters

config_version=5

[application]

config/name="Step By Step"
config/name_localized={
"uk_UA": "Крок за кроком"
}
config/version="0.0.1"
run/main_scene="res://scenes/levels/main_menu_ui.tscn"
config/features=PackedStringArray("4.3", "C#", "Forward Plus")
config/icon="res://sprites/game_icon.png"

[autoload]

SaveSystem="*res://scenes/systems/save_system.tscn"
SceneTransition="*res://scenes/systems/scene_transition.tscn"
UserInterface="*res://scenes/systems/user_interface.tscn"

[display]

window/size/viewport_width=1280
window/size/viewport_height=720
window/stretch/mode="canvas_items"
window/stretch/aspect="ignore"
window/handheld/orientation=1
mouse_cursor/custom_image="res://sprites/kursor.png"

[dotnet]

project/assembly_name="StepToStep"

[gui]

theme/custom="res://resources/Main.tres"
theme/custom_font="res://TXT/minimal_pixelv2.ttf"

[import]

enable_blend_file_import=false

[input_devices]

pointing/android/enable_long_press_as_right_click=true

[internationalization]

locale/locale_filter_mode=0

[layer_names]

2d_render/layer_1="Background 1"
2d_render/layer_2="Background 2"
2d_render/layer_3="Background 3"
2d_render/layer_4="Foreground 1"
2d_render/layer_5="Foreground 2"
2d_render/layer_6="Entities 1"
2d_render/layer_7="Entities 2"
2d_render/layer_8="Foreground 3"
2d_render/layer_9="Entities 3"
2d_render/layer_10="UI"

[rendering]

textures/canvas_textures/default_texture_filter=0
textures/canvas_textures/default_texture_repeat=1
renderer/rendering_method="mobile"
textures/vram_compression/import_etc2_astc=true
environment/defaults/default_clear_color=Color(0.0784314, 0.0901961, 0.141176, 1)
